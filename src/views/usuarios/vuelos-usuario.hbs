<div class="table">
    <table style="width: 80%;">
        <thead>
            <th>Accion</th>
            <th> Origen </th>
            <th> Destino </th>
            <th> Cantidad Boletos </th>
            <th> Precio </th>
        </thead>


        {{#each vuelos}}
        <tr>
            <td>
                
                <form action="/admin/eliminar/vuelo/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE"> 
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>

            </td>
            <td>{{origen}} </td>
            <td>{{destino}}</td>
            <td>{{cantBoleto}}</td>
            <td>${{precio}}<span style="padding-left: 3%;">USD</span></td>
        </tr>
        {{/each}}
    </table>
</div>
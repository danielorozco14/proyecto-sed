<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>
                Nuevo Vuelo
            </h3>
        </div>
        <div class="card-body">
            <form action="/vuelos/agregar" method="POST">
                <div class="form-group">
                    <label for="org">Origen</label>
                    <input type="text" id="org" name="origen" autofocus>
                    
                    <label for="dest">Destino</label>
                    <input type="text" id="dest"name="destino" ><br>

                    <label for="cantidad">Cantidad de boletos</label>
                    <input type="number" id="cantidad" name="cantBoleto" min="1" max="10">

                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Guardar</button>
                </div>
            </form>

        </div>
        <div class="card-body"></div>
    </div>
</div>
<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>
                Editar Vuelo
            </h3>
        </div>
        <div class="card-body">
            <form action="/vuelos/editar/{{vuelo._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <label for="org">Origen</label>
                    <input type="text" id="org" name="origen" value="{{vuelo.origen}}" autofocus>

                    <label for="dest">Destino</label>
                    <input type="text" id="dest" value="{{vuelo.destino}} " name="destino"><br>

                    <label for="cantidad">Cantidad de boletos</label>
                    <input type="number" id="cantidad" value="{{vuelo.cantBoleto}}" name="cantBoleto" min="1" max="10">

                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>
                    Boleto de Vuelo
                </h3>
            </div>
            <div class="card-body">


                <div class="form-group">
                    <label for="org">Origen</label>
                    <h2 id="org">{{vuelo.origen}}</h2><br>


                    <label for="dest">Destino</label>
                    <h2 id="dest" name="destino">{{vuelo.destino}}</h2><br>


                    <label for="cantidad">Cantidad de boletos</label>
                    <h2 id="cantidad" name="cantBoleto">{{vuelo.cantBoleto}}</h2>


                    <label for="precio">Precio</label>
                    <h2 id="precio" name="precio">{{vuelo.precio}}<span></span>USD</h2>

                </div>




            </div>
        </div>



    </div>
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>
                    Ingrese su tarjeta de credito
                </h3>
            </div>
            <div class="card-body">
                <form action="/vuelos/procesar-pago" method="POST">
                    <input type="hidden" name="origen" value="{{vuelo.origen}}">
                    <input type="hidden" name="destino" value="{{vuelo.destino}}">
                    <input type="hidden" name="cantBoleto" value="{{vuelo.cantBoleto}}">
                    <input type="hidden" name="precio" value="{{vuelo.precio}}">
                    <div class="form-group">

                        <label for="numTarjeta">Tarjeta de Credito</label><br>
                        <input type="text" name="numTarjeta" id="numTarjeta" minlength="12" maxlength="16"><br>

                        <label for="expireMM">Fecha de Expiracion</label><br>
                        <select name='mesExpiracion' id='expireMM'>
                            <option value=''>Mes</option>
                            <option value='01'>Enero</option>
                            <option value='02'>Febrero</option>
                            <option value='03'>Marzo</option>
                            <option value='04'>Abril</option>
                            <option value='05'>Mayo</option>
                            <option value='06'>Junio</option>
                            <option value='07'>Julio</option>
                            <option value='08'>Agosto</option>
                            <option value='09'>Septiembre</option>
                            <option value='10'>Octubre</option>
                            <option value='11'>Noviembre</option>
                            <option value='12'>Diciembre</option>
                        </select>
                        <select name='anioExpiracion' id='expireYY'>
                            <option value=''>AÃ±o</option>
                            <option value='20'>2020</option>
                            <option value='21'>2021</option>
                            <option value='22'>2022</option>
                            <option value='23'>2023</option>
                            <option value='24'>2024</option>
                            <option value='25'>2025</option>

                        </select>

                        <br><label for="cod">CVV</label><br>
                        <input type="text" name="cvv" id="cod" maxlength="3">
                    </div>

                    <form class="form-group">

                        <button type="submit" class="btn btn-primary btn-block">Pagar</button>

                    </form>

                </form>

            </div>

        </div>
    </div>

</div>